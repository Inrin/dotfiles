alias mv='mv -i'
alias cp='cp -i'
alias rm='rm -I --preserve-root'
alias clang='clang -fsanitize=address -fno-omit-frame-pointer'
alias xclip='xclip -selection clipboard'

alias pac='doas pacman -S'
alias pacs='pacman -Ss'
alias pacrs='doas pacman -Rnsc'
alias pacu='doas pacman -Syu'
alias paci='pacman -Si'

alias yac='yay -S'
alias yacs='yay -Ss'
alias yacrs='yay -Rnsc'
alias yacu='yay -Syua'
alias yai='yay -Si'

source $HOME/.sh_alias.local
